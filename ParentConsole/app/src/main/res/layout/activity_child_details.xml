<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.acubeapps.parentconsole.ChildDetailsActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_appUsage"
        android:text="App Usage Details"
        android:textColor="#FFF"
        android:background="@drawable/rounded_corner_blue"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_browserHistory"
        android:text="Browser History"
        android:textColor="#FFF"
        android:background="@drawable/rounded_corner_blue"
        android:layout_marginBottom="20dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update_policy"
        android:text="Update App Usage Policy"
        android:textColor="#FFF"
        android:background="@drawable/rounded_corner_blue"
        android:layout_marginBottom="20dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_performance"
        android:text="Overall Performance"
        android:textColor="#FFF"
        android:background="@drawable/rounded_corner_blue"
        android:layout_marginBottom="20dp"/>


</LinearLayout>
